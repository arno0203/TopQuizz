<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scroll"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:scrollbars="vertical"
        tools:context="com.troisado.topquizz.controller.MainActivity">


        <TextView
            android:id="@+id/activity_main_greeting_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:padding="20dp"
            android:text="@string/wellcome"
            android:textAppearance="@android:style/TextAppearance.DialogWindowTitle" />

        <EditText
            android:id="@+id/activity_main_pseudo_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:hint="@string/entry_alias" />

        <CheckBox
            android:id="@+id/activity_main_zone_world"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onCheckboxContinentClicked"
            android:text="@string/zone_wordl" />

        <CheckBox
            android:id="@+id/activity_main_zone_afrique"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onCheckboxContinentClicked"
            android:text="@string/zone_afrique" />

        <CheckBox
            android:id="@+id/activity_main_zone_amerique"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onCheckboxContinentClicked"
            android:text="@string/zone_amerique" />

        <CheckBox
            android:id="@+id/activity_main_zone_asie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onCheckboxContinentClicked"
            android:text="@string/zone_asie" />

        <CheckBox
            android:id="@+id/activity_main_zone_europe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onCheckboxContinentClicked"
            android:text="@string/zone_europe" />

        <CheckBox
            android:id="@+id/activity_main_zone_oceanie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onCheckboxContinentClicked"
            android:text="@string/zone_oceanie" />

        <RadioGroup
            android:id="@+id/activity_main_level_radio_group"
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="-10dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/activity_main_easy_level_radio_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:checked="true"
                android:text="@string/level_easy" />

            <RadioButton
                android:id="@+id/activity_main_medium_level_radio_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/level_medium" />

            <RadioButton
                android:id="@+id/activity_main_hight_level_radio_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/level_hard" />
        </RadioGroup>

        <TextView
            android:id="@+id/activity_main_explain_level_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="@string/level_details" />

        <RadioGroup
            android:id="@+id/activity_main_find_radio_group"
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="-10dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/activity_main_capital_find_radio_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:checked="true"
                android:text="@string/search_capital" />

            <RadioButton
                android:id="@+id/activity_main_country_find_radio_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/search_country" />

            <!--<RadioButton-->
            <!--android:id="@+id/activity_main_mix_find_radio_button"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_weight="1"-->
            <!--android:text="@string/search_both" />-->
        </RadioGroup>

        <Button
            android:id="@+id/activity_main_play_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:padding="30dp"
            android:text="@string/action_begining" />

    </LinearLayout>
</ScrollView>